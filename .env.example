# Environment Configuration Example
# Copy this file to .env.local and fill in your values

# Application
NEXT_PUBLIC_APP_NAME=VideoPlanet
NEXT_PUBLIC_APP_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_BASE=http://localhost:8000
NEXT_PUBLIC_BACKEND_API=http://localhost:8000

# WebSocket
NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws
NEXT_PUBLIC_WS_RECONNECT_INTERVAL=5000
NEXT_PUBLIC_WS_HEARTBEAT_INTERVAL=30000
NEXT_PUBLIC_WS_MAX_RECONNECT_ATTEMPTS=5

# Authentication (NextAuth)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-32-character-secret-key-here

# SendGrid Email Service (Required for production)
SENDGRID_API_KEY=SG.your-sendgrid-api-key-here
SENDGRID_FROM_EMAIL=service@vlanet.net
SENDGRID_FROM_NAME=VideoPlanet
VERIFIED_SENDER=service@vlanet.net

# SendGrid Templates (Optional)
SENDGRID_TEMPLATE_ID_VERIFICATION=your-verification-template-id
SENDGRID_TEMPLATE_ID_PASSWORD_RESET=your-password-reset-template-id
SENDGRID_TEMPLATE_ID_NOTIFICATION=your-notification-template-id

# AI Services
GOOGLE_GEMINI_API_KEY=your-gemini-api-key-here
OPENAI_API_KEY=your-openai-api-key-here

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_DEBUG=true
NEXT_PUBLIC_ENABLE_MAINTENANCE=false

# Development Settings
SKIP_ENV_VALIDATION=false
NODE_ENV=development