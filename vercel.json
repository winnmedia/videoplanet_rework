{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "framework": "nextjs",
  "git": {
    "deploymentEnabled": {
      "main": true,
      "master": true,
      "security-fix-clean": true,
      "railway-deploy": false,
      "railway": false,
      "railway-staging": false,
      "deploy-railway": false,
      "staging": false
    }
  },
  "github": {
    "silent": true,
    "autoAlias": false
  },
  "buildCommand": "pnpm run build",
  "outputDirectory": ".next",
  "devCommand": "pnpm run dev",
  "installCommand": "pnpm install --frozen-lockfile --prefer-offline",
  "regions": ["icn1"],
  "env": {
    "NODE_ENV": "production",
    "NEXT_PUBLIC_APP_ENV": "production",
    "NEXT_PUBLIC_API_URL": "https://api.vlanet.net",
    "NEXT_PUBLIC_BACKEND_URL": "https://api.vlanet.net",
    "NEXTAUTH_SECRET": "vridge-nextauth-secret-production-2025-very-secure-key-for-deployment",
    "SENDGRID_API_KEY": "@sendgrid_api_key",
    "SENDGRID_FROM_EMAIL": "service@vlanet.net",
    "SENDGRID_FROM_NAME": "VideoPlanet",
    "VERIFIED_SENDER": "service@vlanet.net",
    "NEXT_PUBLIC_ENABLE_ANALYTICS": "false",
    "NEXT_PUBLIC_ENABLE_DEBUG": "false",
    "NEXT_PUBLIC_ENABLE_MAINTENANCE": "false",
    "NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING": "false",
    "SKIP_ENV_VALIDATION": "false",
    "NEXT_TELEMETRY_DISABLED": "1"
  },
  "build": {
    "env": {
      "NODE_ENV": "production",
      "NEXT_PUBLIC_APP_ENV": "production",
      "NEXT_PUBLIC_API_URL": "https://api.vlanet.net",
      "NEXT_PUBLIC_BACKEND_URL": "https://api.vlanet.net",
      "SENDGRID_API_KEY": "@sendgrid_api_key",
      "SENDGRID_FROM_EMAIL": "service@vlanet.net",
      "SENDGRID_FROM_NAME": "VideoPlanet",
      "VERIFIED_SENDER": "service@vlanet.net",
      "NEXT_PUBLIC_ENABLE_ANALYTICS": "false",
      "NEXT_PUBLIC_ENABLE_DEBUG": "false",
      "NEXT_PUBLIC_ENABLE_MAINTENANCE": "false",
      "NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING": "false",
      "SKIP_ENV_VALIDATION": "false",
      "NEXT_TELEMETRY_DISABLED": "1",
      "NODE_OPTIONS": "--max-old-space-size=4096"
    }
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store, max-age=0"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "camera=(), microphone=(), geolocation=()"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/proxy/:path*",
      "destination": "https://api.vlanet.net/:path*"
    }
  ],
  "redirects": [
    {
      "source": "/home",
      "destination": "/",
      "permanent": true
    }
  ],
  "functions": {
    "app/api/auth/*": {
      "maxDuration": 15
    },
    "app/api/projects/*/auto-schedule/route.ts": {
      "maxDuration": 45
    },
    "app/api/video-feedback/*": {
      "maxDuration": 30
    },
    "app/api/*": {
      "maxDuration": 30
    }
  },
  "crons": [
    {
      "path": "/api/health",
      "schedule": "0 */6 * * *"
    }
  ]
}
