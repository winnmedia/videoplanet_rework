@use '@/shared/config/design-tokens.scss' as *;

.backdrop {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: $z-index-modal-backdrop;
  background: rgba($color-black, 0.5);
  backdrop-filter: blur(4px);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: $spacing-lg;
}

.modal {
  @include card;
  background: $color-white;
  max-width: 100%;
  max-height: 90vh;
  overflow-y: auto;
  z-index: $z-index-modal;
  position: relative;
  display: flex;
  flex-direction: column;
}

// 크기 변형
.sm {
  width: 320px;
  padding: $spacing-lg;
}

.md {
  width: 480px;
  padding: $spacing-xl;
}

.lg {
  width: 640px;
  padding: $spacing-2xl;
}

// 변형 스타일
.default {
  .icon {
    color: $color-primary;
  }
}

.danger {
  .icon {
    color: $color-error;
  }
  
  .title {
    color: $color-error;
  }
}

.warning {
  .icon {
    color: $color-warning;
  }
  
  .title {
    color: $color-warning-dark;
  }
}

// 헤더
.header {
  display: flex;
  align-items: flex-start;
  gap: $spacing-md;
  margin-bottom: $spacing-lg;
}

.icon {
  flex-shrink: 0;
  margin-top: 2px; // 제목과 정렬
  
  svg {
    width: 24px;
    height: 24px;
  }
}

.title {
  font-size: $font-size-xl;
  font-weight: $font-weight-semibold;
  color: $color-text-primary;
  margin: 0;
  line-height: $line-height-tight;
}

// 내용
.content {
  flex: 1;
  margin-bottom: $spacing-xl;
}

.message {
  font-size: $font-size-base;
  color: $color-text-secondary;
  line-height: $line-height-normal;
  margin: 0;
}

// 액션 버튼
.actions {
  display: flex;
  gap: $spacing-md;
  justify-content: flex-end;
  flex-shrink: 0;
}

// 애니메이션
.entering {
  animation: modalEnter 200ms ease-out forwards;
  
  @keyframes modalEnter {
    from {
      opacity: 0;
      transform: scale(0.95) translateY(-10px);
    }
    to {
      opacity: 1;
      transform: scale(1) translateY(0);
    }
  }
}

.exiting {
  animation: modalExit 200ms ease-in forwards;
  
  @keyframes modalExit {
    from {
      opacity: 1;
      transform: scale(1) translateY(0);
    }
    to {
      opacity: 0;
      transform: scale(0.95) translateY(-10px);
    }
  }
}

// reduced-motion 지원
.reducedMotion {
  &.entering,
  &.exiting {
    animation: none;
  }
  
  &.entering {
    opacity: 1;
    transform: none;
  }
  
  &.exiting {
    opacity: 0;
  }
}

// 반응형
@include mobile {
  .backdrop {
    padding: $spacing-md;
  }
  
  .sm,
  .md,
  .lg {
    width: 100%;
    max-width: 400px;
    padding: $spacing-lg;
  }
  
  .header {
    margin-bottom: $spacing-md;
  }
  
  .content {
    margin-bottom: $spacing-lg;
  }
  
  .title {
    font-size: $font-size-lg;
  }
  
  .message {
    font-size: $font-size-sm;
  }
  
  .actions {
    flex-direction: column;
    
    button {
      width: 100%;
    }
  }
}

@include tablet {
  .lg {
    width: 90vw;
    max-width: 600px;
  }
}

// 다크 모드 지원 (미래 확장용)
@media (prefers-color-scheme: dark) {
  .backdrop {
    background: rgba($color-black, 0.7);
  }
  
  .modal {
    background: $color-dark;
    border: $border-1 solid $color-gray-700;
  }
  
  .title {
    color: $color-white;
  }
  
  .message {
    color: $color-gray-300;
  }
}

// 고대비 모드 지원
@media (prefers-contrast: high) {
  .modal {
    border: $border-2 solid $color-black;
  }
  
  .backdrop {
    background: rgba($color-black, 0.8);
  }
}