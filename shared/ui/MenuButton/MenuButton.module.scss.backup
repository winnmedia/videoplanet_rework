@use '@/shared/config/design-tokens.scss' as *;

.menuButton {
  display: flex;
  align-items: center;
  width: 100%;
  padding: 12px 0 12px 48px;
  background: transparent;
  border: none;
  color: $color-gray-500;
  text-align: left;
  position: relative;
  min-height: 48px;
  font-size: $font-size-base;
  cursor: pointer;
  transition: color 0.2s ease;

  &:hover {
    color: $color-primary;
  }

  &:focus-visible {
    outline: 2px solid $color-primary;
    outline-offset: 2px;
  }

  &.active {
    color: $color-primary;
  }
}

.iconContainer {
  position: absolute;
  left: 8px;
  top: 50%;
  transform: translateY(-50%);
  width: 32px;
  height: 32px;
  border-radius: 6px;
  background: $color-gray-100;
  display: flex;
  align-items: center;
  justify-content: center;

  &.active {
    background: $color-primary;
  }
}

.icon {
  width: 20px;
  height: 20px;
  object-fit: contain;
}

.label {
  flex: 1;
  margin-right: 8px;
}

.countBadge {
  background: $color-primary;
  color: white;
  padding: 2px 8px;
  border-radius: 12px;
  font-size: $font-size-sm;
  min-width: 20px;
  text-align: center;
}