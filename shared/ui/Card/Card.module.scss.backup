@use '@/shared/config/design-tokens.scss' as *;

.card {
  background: white;
  border: 1px solid $color-border;
  display: flex;
  flex-direction: column;
  transition: all 0.2s ease;
  position: relative;
  
  &.legacyStyle {
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }
  
  &.legacyRadius {
    border-radius: 20px;
  }
  
  &.sm {
    padding: $spacing-sm;
  }
  
  &.md {
    padding: $spacing-md;
  }
  
  &.lg {
    padding: $spacing-lg;
  }
  
  &.default {
    background: white;
    border: 1px solid $color-border;
  }
  
  &.outline {
    background: transparent;
    border: 2px solid $color-border;
  }
  
  &.elevated {
    box-shadow: $shadow-lg;
  }
  
  &.ghost {
    background: transparent;
    border: none;
    box-shadow: none;
  }
  
  &.clickable {
    cursor: pointer;
    
    &:focus-visible {
      outline: 2px solid $color-primary;
      outline-offset: 2px;
    }
  }
  
  &.hover:hover:not(.disabled):not(.loading) {
    transform: translateY(-2px);
    box-shadow: $shadow-xl;
  }
  
  &.disabled {
    opacity: 0.6;
    cursor: not-allowed;
  }
  
  &.loading {
    pointer-events: none;
    opacity: 0.7;
  }
  
  &.fullWidth {
    width: 100%;
  }
  
  @media (prefers-reduced-motion: reduce) {
    &.hover:hover {
      transform: none;
    }
  }
}

.header {
  margin-bottom: $spacing-sm;
}

.content {
  flex: 1;
}

.footer {
  margin-top: $spacing-sm;
}