@use 'design-tokens.scss' as *;

// ===== PRECISION CRAFT DESIGN TOKENS =====
// Mathematical 8px Grid System
$precision-grid-base: 8px;
$precision-grid-unit: $precision-grid-base;

// Spacing based on 8px grid
$spacing-precision-xs: $precision-grid-base * 1;  // 8px
$spacing-precision-sm: $precision-grid-base * 2;  // 16px
$spacing-precision-md: $precision-grid-base * 3;  // 24px
$spacing-precision-lg: $precision-grid-base * 4;  // 32px
$spacing-precision-xl: $precision-grid-base * 5;  // 40px
$spacing-precision-2xl: $precision-grid-base * 6; // 48px

// Typography Scale (Perfect Fourth - 1.2 ratio for optical balance)
$font-precision-xs: 12px;
$font-precision-sm: 14px;
$font-precision-md: 16px;  // Base
$font-precision-lg: 19px;  // 16 * 1.2
$font-precision-xl: 23px;  // 19 * 1.2
$font-precision-2xl: 28px; // 23 * 1.2

// Optical Corrections
$optical-correction-small: -0.03em;
$optical-correction-medium: -0.02em;
$optical-correction-large: -0.01em;

// Golden Ratio Animations (φ = 1.618 based timing)
$animation-precision-fast: 162ms;      // φ * 100ms
$animation-precision-medium: 262ms;    // φ * 162ms
$animation-precision-slow: 424ms;      // φ * 262ms

// Precision Transitions
$transition-precision: all $animation-precision-medium cubic-bezier(0.25, 0.46, 0.45, 0.94);
$transition-precision-fast: all $animation-precision-fast cubic-bezier(0.25, 0.46, 0.45, 0.94);

// SubMenu specific tokens (DEVPLAN.md compliance)
$submenu-opacity: 0.9; // 90% transparency requirement
$submenu-backdrop-filter: blur(8px);
$submenu-min-touch-target: 44px; // WCAG AA minimum

// Focus States
$focus-outline-precision: 2px solid $color-primary;
$focus-outline-offset: 2px;

// Z-index layers
$z-submenu-backdrop: 8;
$z-submenu: 9;
$z-sidebar: 10;

// Breakpoints aligned to 8px grid
$breakpoint-mobile: 48rem;    // 768px (96 * 8)
$breakpoint-tablet: 64rem;    // 1024px (128 * 8) 
$breakpoint-desktop: 80rem;   // 1280px (160 * 8)

// Accessibility tokens
$reduced-motion-duration: 0ms;
$high-contrast-border: 2px solid;