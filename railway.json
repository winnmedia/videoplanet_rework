{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "nixpacks",
    "buildCommand": "pnpm install --frozen-lockfile && pnpm run build:prod"
  },
  "deploy": {
    "startCommand": "pnpm run start",
    "restartPolicyType": "ALWAYS",
    "restartPolicyMaxRetries": 10
  }
}