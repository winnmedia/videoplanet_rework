{
  "name": "vridge-web",
  "version": "2.1.0",
  "private": true,
  "packageManager": "pnpm@10.15.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "lint:styling": "eslint -c .eslintrc.styling.js **/*.{ts,tsx}",
    "lint:fix": "eslint --fix",
    "stylelint": "stylelint **/*.{css,scss}",
    "stylelint:fix": "stylelint **/*.{css,scss} --fix",
    "type-check": "npx tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "validate": "npm run type-check && npm run lint && npm run format:check",
    "validate:build": "node scripts/build-validation.js",
    "prepare": "is-ci || husky install",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run --dir shared --dir entities --dir features",
    "test:integration": "vitest run --dir widgets --dir processes --dir app",
    "test:e2e": "vitest run --dir test/e2e",
    "test:ci": "vitest run --coverage --reporter=json --reporter=default",
    "_comment_parallel_dev": "=== 병렬 개발 모듈별 테스트 스크립트 ===",
    "test:dashboard": "vitest run **/*dashboard*/** --coverage --coverage.thresholds.lines=85",
    "test:dashboard:smoke": "vitest run **/*dashboard*/**/*.smoke.test.* --reporter=basic",
    "test:calendar": "vitest run **/*calendar*/** --coverage --coverage.thresholds.lines=90",
    "test:calendar:smoke": "vitest run **/*calendar*/**/*.smoke.test.* --reporter=basic",
    "test:project": "vitest run **/*project*/** --coverage --coverage.thresholds.lines=88",
    "test:project:smoke": "vitest run **/*project*/**/*.smoke.test.* --reporter=basic",
    "test:planning": "vitest run **/*video-planning*/** --coverage --coverage.thresholds.lines=75",
    "test:planning:smoke": "vitest run **/*video-planning*/**/*.smoke.test.* --reporter=basic",
    "test:feedback": "vitest run **/*video-feedback*/** --coverage --coverage.thresholds.lines=82",
    "test:feedback:smoke": "vitest run **/*video-feedback*/**/*.smoke.test.* --reporter=basic",
    "_comment_parallel_execution": "=== 병렬 실행 테스트 ===",
    "test:all-modules": "npm run test:dashboard & npm run test:calendar & npm run test:project & npm run test:planning & npm run test:feedback & wait",
    "test:smoke-all": "npm run test:dashboard:smoke & npm run test:calendar:smoke & npm run test:project:smoke & npm run test:planning:smoke & npm run test:feedback:smoke & wait",
    "_comment_coverage_reports": "=== 커버리지 리포트 ===",
    "test:coverage:full": "vitest run --coverage --coverage.all=true",
    "test:coverage:report": "npm run test:coverage:full && node scripts/coverage-report.js",
    "test:coverage:ci": "vitest run --coverage --reporter=json --outputFile=coverage-report.json",
    "test:mutation": "stryker run",
    "_comment_contract_tests": "=== Contract 테스트 ===",
    "test:contracts": "vitest run test/contracts/**/*.test.*",
    "test:api:integration": "vitest run test/integration/api/**/*.test.*",
    "validate:api-schemas": "node scripts/validate-api-schemas.js",
    "_comment_e2e_tests": "=== E2E 테스트 (배포 환경) ===",
    "test:e2e:all": "playwright test",
    "test:e2e:workflow": "playwright test e2e/video-production-workflow.spec.ts",
    "test:e2e:smoke": "playwright test --project=api-smoke-tests",
    "test:e2e:smoke:browser": "playwright test --project=production-smoke-tests",
    "test:e2e:critical": "playwright test --project=critical-path",
    "test:e2e:api": "playwright test --project=api-tests",
    "test:e2e:journey": "playwright test --project=user-journey",
    "test:e2e:mobile": "playwright test --project=mobile-critical",
    "test:e2e:report": "playwright show-report",
    "test:e2e:debug": "playwright test --debug --project=critical-path",
    "test:e2e:headed": "playwright test --headed --project=critical-path",
    "test:e2e:ui": "playwright test --ui",
    "_comment_ui_quality_audit": "=== UI 품질 감사 스크립트 ===",
    "audit:ui": "playwright test --config=playwright.local.config.ts --project=ui-quality-audit",
    "audit:http": "playwright test --config=playwright.local.config.ts --project=http-error-audit",
    "audit:full": "playwright test --config=playwright.local.config.ts",
    "audit:report": "playwright show-report test-results/ui-audit-report",
    "_comment_phase4_tests": "=== Phase 4 통합 테스트 ===",
    "test:phase4": "npm run test:workflow && npm run test:notifications && npm run test:e2e:workflow",
    "test:workflow": "vitest run processes/video-production/model/workflowMachine.simple.test.ts",
    "test:notifications": "vitest run processes/feedback-collection/lib/notificationEngine.test.ts",
    "test:performance": "vitest run shared/lib/performance-monitor.test.ts",
    "test:coverage:phase4": "tsx scripts/test-coverage-report.ts"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "6.4.0",
    "@fortawesome/free-regular-svg-icons": "6.4.0",
    "@fortawesome/free-solid-svg-icons": "6.4.0",
    "@fortawesome/react-fontawesome": "0.2.0",
    "@reduxjs/toolkit": "^2.0.0",
    "@sendgrid/mail": "^8.1.5",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@xstate/react": "^6.0.0",
    "class-variance-authority": "^0.7.1",
    "classnames": "^2.5.1",
    "clsx": "^2.1.1",
    "next": "15.5.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.62.0",
    "react-redux": "^9.2.0",
    "sass": "^1.91.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4",
    "typescript": "^5",
    "xstate": "^5.20.2",
    "zod": "^3.25.0",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@commitlint/cli": "^18.0.0",
    "@commitlint/config-conventional": "^18.0.0",
    "@eslint/eslintrc": "^3",
    "@feature-sliced/eslint-config": "^0.1.1",
    "@playwright/test": "^1.55.0",
    "@stylistic/eslint-plugin": "^2.0.0",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/classnames": "^2.3.0",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9",
    "eslint-config-next": "15.5.0",
    "eslint-plugin-boundaries": "^5.0.1",
    "eslint-plugin-import": "^2.32.0",
    "happy-dom": "^18.0.1",
    "husky": "^9.0.0",
    "is-ci": "^3.0.1",
    "jest-axe": "^10.0.0",
    "jsdom": "^26.1.0",
    "lint-staged": "^15.0.0",
    "msw": "^2.0.14",
    "prettier": "^3.3.0",
    "prettier-plugin-tailwindcss": "^0.6.0",
    "stylelint": "^16.0.0",
    "stylelint-config-css-modules": "^4.4.0",
    "stylelint-config-standard-scss": "^13.0.0",
    "stylelint-scss": "^6.0.0",
    "tsx": "^4.20.5",
    "vitest": "^3.2.4"
  }
}
