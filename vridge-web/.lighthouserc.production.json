{
  "ci": {
    "collect": {
      "url": ["https://vridge.vlanet.net/", "https://vridge.vlanet.net/dashboard"],
      "startServerCommand": null,
      "numberOfRuns": 3,
      "settings": {
        "chromeFlags": "--no-sandbox --disable-dev-shm-usage",
        "preset": "perf"
      }
    },
    "assert": {
      "preset": "lighthouse:no-pwa",
      "assertions": {
        "first-contentful-paint": ["error", {"maxNumericValue": 2000}],
        "largest-contentful-paint": ["error", {"maxNumericValue": 2500}],
        "first-meaningful-paint": ["error", {"maxNumericValue": 2000}],
        "speed-index": ["error", {"maxNumericValue": 3000}],
        "total-blocking-time": ["error", {"maxNumericValue": 500}],
        "cumulative-layout-shift": ["error", {"maxNumericValue": 0.1}],
        "performance": ["error", {"minScore": 0.85}],
        "accessibility": ["error", {"minScore": 0.95}],
        "best-practices": ["error", {"minScore": 0.90}],
        "seo": ["error", {"minScore": 0.90}]
      }
    },
    "upload": {
      "target": "temporary-public-storage"
    }
  }
}