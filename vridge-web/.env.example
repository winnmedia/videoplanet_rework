# ===================================
# ENVIRONMENT CONFIGURATION
# ===================================
# Copy this file to .env.local for local development
# Update values according to your environment

# Environment Type
NODE_ENV=development
NEXT_PUBLIC_APP_ENV=development

# Application Configuration
NEXT_PUBLIC_APP_NAME="Video Planet"
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_VERSION=${npm_package_version}

# API Configuration - Railway 통합 백엔드 
NEXT_PUBLIC_API_URL=https://videoplanet.up.railway.app
NEXT_PUBLIC_API_VERSION=
NEXT_PUBLIC_API_TIMEOUT=30000

# Django Backend Configuration - Railway 통합 백엔드
NEXT_PUBLIC_BACKEND_URL=https://videoplanet.up.railway.app
NEXT_PUBLIC_BACKEND_API_KEY=

# Authentication
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here-min-32-chars-required
NEXT_PUBLIC_AUTH_PROVIDER=credentials

# Google OAuth (if using)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Google AI Services (Gemini API)
GOOGLE_GEMINI_API_KEY=

# Database (if Next.js needs direct access)
DATABASE_URL=videoplanet.up.railway.app

# Redis Configuration (for caching)
REDIS_URL=
REDIS_TOKEN=

# File Upload Configuration
NEXT_PUBLIC_MAX_FILE_SIZE=10485760
NEXT_PUBLIC_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,video/mp4

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_DEBUG=true
NEXT_PUBLIC_ENABLE_MAINTENANCE=false

# Third-party Services
NEXT_PUBLIC_GA_TRACKING_ID=
NEXT_PUBLIC_SENTRY_DSN=
NEXT_PUBLIC_STRIPE_PUBLIC_KEY=

# CDN Configuration
NEXT_PUBLIC_CDN_URL=
NEXT_PUBLIC_IMAGE_DOMAINS=localhost,vridge-api.railway.app

# WebSocket Configuration
NEXT_PUBLIC_WS_URL=wss://videoplanet.up.railway.app/ws
NEXT_PUBLIC_WS_RECONNECT_INTERVAL=5000

# Rate Limiting
NEXT_PUBLIC_API_RATE_LIMIT=100
NEXT_PUBLIC_API_RATE_WINDOW=60000

# Logging
LOG_LEVEL=debug
NEXT_PUBLIC_LOG_LEVEL=info

# Performance Monitoring
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=false
NEXT_PUBLIC_PERFORMANCE_SAMPLE_RATE=0.1