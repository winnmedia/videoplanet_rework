@use '@/shared/config/design-tokens.scss' as *;

.emptyState {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  padding: $spacing-2xl;
  min-height: 200px;

  // 카드 내부에 있을 때는 패딩 조정
  .activityFeed &,
  .projectsList & {
    padding: $spacing-xl;
    min-height: 150px;
  }
}

// 일러스트레이션 컨테이너
.illustration {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: $spacing-lg;
  position: relative;

  // 작은 카드 내부에서는 크기 줄임
  .activityFeed &,
  .projectsList & {
    width: 60px;
    height: 60px;
    margin-bottom: $spacing-md;
  }
}

.illustrationEmoji {
  font-size: 36px;
  line-height: 1;

  // 작은 카드 내부에서는 크기 줄임
  .activityFeed &,
  .projectsList & {
    font-size: 28px;
  }
}

// 일러스트레이션 색상 변형
.illustrationPrimary {
  color: $color-primary;
}

.illustrationInfo {
  color: $color-info;
}

.illustrationError {
  color: $color-error;
}

.illustrationWarning {
  color: $color-warning;
}

// 배경 색상 변형
.bgPrimary {
  background: rgba(0, 49, 255, 0.1);
  border: 2px solid rgba(0, 49, 255, 0.2);
}

.bgInfo {
  background: rgba(23, 162, 184, 0.1);
  border: 2px solid rgba(23, 162, 184, 0.2);
}

.bgError {
  background: rgba(217, 58, 58, 0.1);
  border: 2px solid rgba(217, 58, 58, 0.2);
}

.bgWarning {
  background: rgba(255, 193, 7, 0.1);
  border: 2px solid rgba(255, 193, 7, 0.2);
}

// 콘텐츠 영역
.content {
  max-width: 320px;
}

.title {
  font-size: $font-size-lg;
  font-weight: $font-weight-semibold;
  color: $color-text-primary;
  margin: 0 0 $spacing-sm 0;
  line-height: $line-height-tight;

  // 작은 카드 내부에서는 크기 줄임
  .activityFeed &,
  .projectsList & {
    font-size: $font-size-md;
    margin-bottom: $spacing-xs;
  }
}

.description {
  font-size: $font-size-sm;
  color: $color-text-secondary;
  line-height: $line-height-normal;
  margin: 0 0 $spacing-lg 0;

  // 작은 카드 내부에서는 마진 조정
  .activityFeed &,
  .projectsList & {
    font-size: $font-size-xs;
    margin-bottom: $spacing-md;
  }
}

// 액션 버튼
.actionButton {
  @include button-base;
  height: $button-height-md;
  padding: 0 $spacing-lg;
  background: $color-primary;
  color: $color-white;
  font-size: $font-size-sm;
  font-weight: $font-weight-semibold;
  transition: $transition-all;

  &:hover {
    background: $color-primary-dark;
    transform: translateY(-1px);
    box-shadow: $shadow-md;
  }

  &:active {
    transform: translateY(0);
    box-shadow: $shadow-sm;
  }

  &:focus-visible {
    outline: 2px solid $color-primary-light;
    outline-offset: 2px;
  }

  // 작은 카드 내부에서는 크기 조정
  .activityFeed &,
  .projectsList & {
    height: $button-height-sm;
    padding: 0 $spacing-md;
    font-size: $font-size-xs;
  }
}

// 반응형 조정
@include mobile {
  .emptyState {
    padding: $spacing-xl $spacing-md;
  }

  .illustration {
    width: 60px;
    height: 60px;
    margin-bottom: $spacing-md;
  }

  .illustrationEmoji {
    font-size: 28px;
  }

  .title {
    font-size: $font-size-md;
  }

  .description {
    font-size: $font-size-xs;
  }

  .actionButton {
    height: $button-height-sm;
    padding: 0 $spacing-md;
    font-size: $font-size-xs;
  }
}

// 접근성 개선
@media (prefers-reduced-motion: reduce) {
  .actionButton {
    transition: none;

    &:hover {
      transform: none;
    }

    &:active {
      transform: none;
    }
  }
}

// 고대비 모드 지원
@media (prefers-contrast: high) {
  .illustration {
    border-width: 3px;
  }

  .actionButton {
    border: 2px solid $color-primary-dark;
  }
}

// 다크 모드 대비 (향후 확장용)
@media (prefers-color-scheme: dark) {
  .title {
    color: var(--color-text-primary-dark, $color-text-primary);
  }

  .description {
    color: var(--color-text-secondary-dark, $color-text-secondary);
  }
}