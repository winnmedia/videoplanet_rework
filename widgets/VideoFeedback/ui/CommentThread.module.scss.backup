/**
 * @description CommentThread 컴포넌트 스타일
 * @design-system 댓글 시스템 UI, 우선순위별 스타일링
 */

@use '@/shared/config/design-tokens.scss' as *;

.commentThread {
  display: flex;
  flex-direction: column;
  height: 100%;
  background: $color-white;
  border: $border-1 solid $color-gray-200;
  border-radius: $radius-lg;
  overflow: hidden;
}

.threadHeader {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: $spacing-md $spacing-lg;
  background: $bg-secondary;
  border-bottom: $border-1 solid $color-gray-200;

  h3 {
    margin: 0;
    font-size: $font-size-lg;
    font-weight: $font-weight-semibold;
    color: $color-text-primary;
  }
}

.controls {
  display: flex;
  gap: $spacing-sm;
  align-items: center;
}

.filterSelect,
.sortSelect {
  padding: $spacing-xs $spacing-sm;
  border: $border-1 solid $color-gray-300;
  border-radius: $radius-sm;
  background: $color-white;
  font-size: $font-size-sm;
  color: $color-text-secondary;

  &:focus {
    outline: 2px solid $color-primary;
    border-color: $color-primary;
  }
}

// ===========================
// 새 댓글 입력
// ===========================

.newCommentForm {
  padding: $spacing-lg;
  border-bottom: $border-1 solid $color-gray-200;
  background: $color-white;
}

.commentInput {
  width: 100%;
  min-height: 80px;
  padding: $spacing-md;
  border: $border-1 solid $color-gray-300;
  border-radius: $radius-md;
  resize: vertical;
  font-family: $font-primary;
  font-size: $font-size-sm;
  line-height: $line-height-normal;

  &:focus {
    outline: 2px solid $color-primary;
    border-color: $color-primary;
  }

  &::placeholder {
    color: $color-gray-500;
  }
}

.commentActions {
  display: flex;
  justify-content: flex-end;
  margin-top: $spacing-md;
}

.addButton {
  @include button-base;
  padding: $spacing-sm $spacing-lg;
  background: $color-primary;
  color: $color-white;
  font-size: $font-size-sm;

  &:hover:not(:disabled) {
    background: $color-primary-dark;
  }

  &:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }
}

// ===========================
// 댓글 목록
// ===========================

.commentList {
  flex: 1;
  overflow-y: auto;
  padding: $spacing-sm;
}

.emptyState {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 200px;
  color: $color-text-secondary;
  font-style: italic;
}

.commentItem {
  padding: $spacing-lg;
  border: $border-1 solid $color-gray-200;
  border-radius: $radius-md;
  margin-bottom: $spacing-md;
  background: $color-white;
  transition: $transition-shadow;

  &:hover {
    box-shadow: $shadow-sm;
  }

  &.resolved {
    opacity: 0.7;
    background: rgba($color-success, 0.02);
    border-color: rgba($color-success, 0.2);
  }

  &.highlighted {
    border-color: $color-primary;
    box-shadow: 0 0 0 2px rgba($color-primary, 0.1);
  }
}

.commentHeader {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: $spacing-md;
}

.authorInfo {
  display: flex;
  align-items: center;
  gap: $spacing-sm;
  flex-wrap: wrap;
}

.authorName {
  font-weight: $font-weight-semibold;
  color: $color-text-primary;
  font-size: $font-size-sm;
}

.authorRole {
  font-size: $font-size-xs;
  color: $color-text-secondary;
  background: $color-gray-100;
  padding: $spacing-xs $spacing-sm;
  border-radius: $radius-full;
}

.timestamp {
  font-family: $font-mono;
  font-size: $font-size-xs;
  color: $color-info;
  background: rgba($color-info, 0.1);
  padding: $spacing-xs $spacing-sm;
  border-radius: $radius-sm;
  font-weight: $font-weight-medium;
}

.commentMeta {
  display: flex;
  align-items: center;
  gap: $spacing-sm;
}

// ===========================
// 우선순위 배지
// ===========================

.priority {
  font-size: $font-size-xs;
  font-weight: $font-weight-semibold;
  padding: $spacing-xs $spacing-sm;
  border-radius: $radius-full;
  text-transform: uppercase;
  letter-spacing: 0.5px;

  &.priority-urgent {
    background: rgba($color-error, 0.1);
    color: $color-error;
    border: $border-1 solid rgba($color-error, 0.3);
  }

  &.priority-high {
    background: rgba($color-warning, 0.1);
    color: $color-warning-dark;
    border: $border-1 solid rgba($color-warning, 0.3);
  }

  &.priority-medium {
    background: rgba($color-info, 0.1);
    color: $color-info-darker;
    border: $border-1 solid rgba($color-info, 0.3);
  }

  &.priority-low {
    background: rgba($color-gray-500, 0.1);
    color: $color-gray-700;
    border: $border-1 solid rgba($color-gray-500, 0.3);
  }
}

.resolvedBadge {
  background: rgba($color-success, 0.1);
  color: $color-success;
  border: $border-1 solid rgba($color-success, 0.3);
  font-size: $font-size-xs;
  font-weight: $font-weight-semibold;
  padding: $spacing-xs $spacing-sm;
  border-radius: $radius-full;
  
  &::before {
    content: '✓ ';
  }
}

// ===========================
// 댓글 내용
// ===========================

.commentContent {
  margin-bottom: $spacing-md;

  p {
    margin: 0 0 $spacing-sm 0;
    line-height: $line-height-normal;
    color: $color-text-primary;
    word-break: break-word;
  }
}

.tags {
  display: flex;
  flex-wrap: wrap;
  gap: $spacing-xs;
  margin-top: $spacing-sm;
}

.tag {
  background: $color-primary-lighter;
  color: $color-primary;
  font-size: $font-size-xs;
  padding: $spacing-xs $spacing-sm;
  border-radius: $radius-full;
  font-weight: $font-weight-medium;
}

// ===========================
// 댓글 액션
// ===========================

.commentActions {
  display: flex;
  gap: $spacing-md;
  align-items: center;
  margin-top: $spacing-md;
  padding-top: $spacing-md;
  border-top: $border-1 solid $color-gray-200;

  button {
    background: none;
    border: none;
    color: $color-text-secondary;
    font-size: $font-size-sm;
    cursor: pointer;
    padding: $spacing-xs $spacing-sm;
    border-radius: $radius-sm;
    transition: $transition-colors;

    &:hover {
      background: $color-gray-100;
      color: $color-text-primary;
    }

    &:focus {
      outline: 2px solid $color-primary;
    }
  }

  .resolveButton {
    background: rgba($color-success, 0.1);
    color: $color-success;
    border: $border-1 solid rgba($color-success, 0.3);

    &:hover {
      background: rgba($color-success, 0.2);
    }
  }
}

// ===========================
// 수정/답글 폼
// ===========================

.editForm,
.replyForm {
  margin-top: $spacing-md;
  padding-top: $spacing-md;
  border-top: $border-1 solid $color-gray-200;
}

.editInput,
.replyInput {
  width: 100%;
  min-height: 60px;
  padding: $spacing-sm;
  border: $border-1 solid $color-gray-300;
  border-radius: $radius-sm;
  resize: vertical;
  font-family: $font-primary;
  font-size: $font-size-sm;

  &:focus {
    outline: 2px solid $color-primary;
    border-color: $color-primary;
  }
}

.editActions,
.replyActions {
  display: flex;
  gap: $spacing-sm;
  margin-top: $spacing-sm;
  justify-content: flex-end;

  button {
    padding: $spacing-xs $spacing-md;
    border: $border-1 solid $color-gray-300;
    background: $color-white;
    border-radius: $radius-sm;
    font-size: $font-size-sm;
    cursor: pointer;
    transition: $transition-all;

    &:hover {
      background: $color-gray-100;
    }

    &:first-child {
      background: $color-primary;
      color: $color-white;
      border-color: $color-primary;

      &:hover {
        background: $color-primary-dark;
      }
    }
  }
}

// ===========================
// 반응형 디자인
// ===========================

@include mobile {
  .threadHeader {
    flex-direction: column;
    align-items: flex-start;
    gap: $spacing-sm;

    .controls {
      width: 100%;
      justify-content: flex-end;
    }
  }

  .commentItem {
    padding: $spacing-md;
  }

  .commentHeader {
    flex-direction: column;
    align-items: flex-start;
    gap: $spacing-sm;
  }

  .authorInfo {
    width: 100%;
  }

  .commentMeta {
    width: 100%;
    justify-content: flex-start;
  }

  .commentActions {
    flex-wrap: wrap;
    gap: $spacing-sm;
    
    button {
      flex: 1;
      min-width: auto;
    }
  }
}

// ===========================
// 스크롤바 스타일링
// ===========================

.commentList {
  &::-webkit-scrollbar {
    width: 6px;
  }

  &::-webkit-scrollbar-track {
    background: $color-gray-100;
    border-radius: $radius-sm;
  }

  &::-webkit-scrollbar-thumb {
    background: $color-gray-400;
    border-radius: $radius-sm;

    &:hover {
      background: $color-gray-500;
    }
  }
}

// ===========================
// 접근성 개선
// ===========================

@media (prefers-contrast: high) {
  .priority,
  .resolvedBadge,
  .tag {
    border-width: 2px;
    font-weight: $font-weight-bold;
  }

  .commentItem {
    border-width: 2px;
    
    &.highlighted {
      border-width: 3px;
    }
  }
}

@media (prefers-reduced-motion: reduce) {
  .commentItem {
    transition: none;
  }

  .commentActions button {
    transition: none;
  }
}